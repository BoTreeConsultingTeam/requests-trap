- form_html_options = { role: 'form', class: 'form-horizontal' }
- submit_url = admin_subscribers_path
- request_method = :post
- is_edit = @subscriber.persisted?
- if is_edit
  - submit_url = admin_subscriber_path(@subscriber)
  - request_method = :put

= form_for(@subscriber, url: submit_url, method: request_method, html: form_html_options) do |f|
  .form-group
    = f.label(:name, class: 'col-md-2 control-label')
    .col-md-5
      = f.text_field(:name, class: 'form-control', placeholder: 'Name')

  .form-group
    = f.label(:email, class: 'col-md-2 control-label')
    .col-md-5
      = f.email_field(:email, class: 'form-control', placeholder: 'Email')

  .form-group
    = f.label(:trapping_code, class: 'col-md-2 control-label')
    .col-md-5
      = f.text_field(:trapping_code, class: 'form-control', placeholder: 'Trapping Code', disabled: is_edit)

  .form-group
    .col-md-offset-2.col-md-10
      = f.submit("Save", class: 'btn btn-primary')
      = link_to("Cancel", admin_subscribers_path, class: 'btn btn-primary')
